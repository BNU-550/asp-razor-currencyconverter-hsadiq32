@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="jumbotron">
    <h3 class="text-center">Currency Converter</h3>

    <hr class="my-4">
    <form method="post">
        <div class="justify-content-center">
            <p class="text-center">Convert:</p>
            <div class="input-group mb-3">
                <input id="amount" type="number" asp-for="Currency1" class="form-control" placeholder="Amount" aria-label="Amount" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <select class="custom-select" asp-for="Currency1Name">
                        <option value="GBP">GBP</option>
                        <option value="EUR">EUR</option>
                        <option value="USD">USD</option>
                        <option value="CAD">CAD</option>
                        <option value="AUD">AUD</option>
                    </select>
                </div>
            </div>
            <p class="text-center">To:</p>
            <div class="input-group" style="width:155px;margin:auto">
                <select class="custom-select" asp-for="Currency2Name">
                    <option value="GBP">GBP</option>
                    <option value="EUR">EUR</option>
                    <option value="USD">USD</option>
                    <option value="CAD">CAD</option>
                    <option value="AUD">AUD</option>
                </select>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">Convert</button>
                </div>
            </div>

        </div>
        <hr class="my-4">
        <div class="@ViewData["ShowResult"] justify-content-center">
            <div class="row">
                <div class="col-5">
                    <div class="input-group">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="2">@Model.Currency1</textarea>
                        <div class="input-group-append">
                            <span class="input-group-text" id="inputGroup-sizing-lg">@Model.Currency1Name</span>
                        </div>
                    </div>
                </div>
                <div class="col-2 text-center">=</div>
                <div class="col-5">
                    <div class="input-group">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="2">@ViewData["Result"]</textarea>
                        <div class="input-group-append">
                            <span class="input-group-text" id="inputGroup-sizing-lg">@Model.Currency2Name</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <h5 class="@ViewData["ShowResult"] text-center text " style="color:red;margin-top:15px;">@ViewData["ErrorMessage"]</h5>
    </form>

</div>